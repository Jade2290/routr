{
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom", "es5", "scripthost" ],
    "moduleResolution": "node",
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}