{
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2017",
      "dom",
      "es6",
      "scripthost"
    ],
    "moduleResolution": "node",
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}