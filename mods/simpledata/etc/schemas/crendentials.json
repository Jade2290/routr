{
  "$id": "https://json-schema.org/draft/2020-12/schema",
  "title": "Credentials Schema",
  "description": "Credentials resource for Agents and Trunks",
  "type": "object",
  "properties": {
    "kind": {
      "enum": [
        "Credentials",
        "credentials"
      ]
    },
    "apiVersion": {
      "enum": [
        "v2draft1"
      ]
    },
    "metadata": {
      "description": "Resource metadata",
      "type": "object"
    },
    "spec": {
      "description": "Operations spec for Credentials",
      "type": "object",
      "properties": {
        "credentials": {
          "description": "Credential configuration",
          "type": "object",
          "properties": {
            "username": {
              "description": "Username",
              "type": "string",
              "readOnly": true
            },
            "password": {
              "description": "Password",
              "type": "string",
              "writeOnly": true
            }
          },
          "required": [
            "username",
            "password"
          ]
        }
      },
      "required": [
        "credentials"
      ]
    }
  },
  "required": [
    "kind",
    "metadata",
    "spec",
    "apiVersion"
  ]
}
