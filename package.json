{
  "name": "root",
  "private": true,
  "nodemonConfig": {
    "watch": [
      "./mods/"
    ],
    "ext": "ts",
    "exec": "ts-node",
    "ignore": "**/*.d.ts"
  },
  "scripts": {
    "make": "npm install && npm run bootstrap && npm setup",
    "bootstrap": "lerna bootstrap --no-ci --hoist",
    "setup": "./.scripts/setup.sh",
    "test": "cross-env NODE_ENV=dev nyc --reporter=lcov mocha mods/*/test/*.unit.test.ts --exit",
    "test:graaljs": "cross-env NODE_ENV=dev nyc --reporter=lcov .scripts/mocha_wrapper.sh mods/**/graaljstest/*.unit.test.ts --exit",
    "build": "lerna run build && npm run bundle",
    "clean": "rimraf **/*/tsconfig.tsbuildinfo && rimraf **/*/dist && rimraf **/*/dist && rimraf **/*/node_modules && rimraf dist node_modules build libs .gradle ",
    "start:scaip": "cross-env NODE_ENV=dev LOGS_LEVEL=verbose nodemon mods/scaip/src/runner",
    "start:echo": "cross-env NODE_ENV=dev LOGS_LEVEL=verbose nodemon mods/echo/src/runner",
    "start:router": "cross-env NODE_ENV=dev LOGS_LEVEL=verbose CONFIG_PATH=$(pwd)/config/router.json nodemon mods/router/src/runner",
    "start:edgeport": "cross-env NODE_ENV=dev LOGS_LEVEL=verbose ./mods/edgeport/edgeport.sh",
    "transpile": "tsc",
    "bundle": "webpack --config webpack.config.js --mode none",
    "prebundle": "cross-env npm run setup && npm run transpile && cp node_modules/jvm-npm/src/main/javascript/jvm-npm.js mods/edgeport/libs/",
    "bump:version": "rimraf mods/**/.lerna-changed-buster-* && lerna exec -- touch .lerna-changed-buster-$RANDOM"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^8.2.3",
    "@types/node": "^17.0.7",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.4",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.2",
    "esm": "^3.2.25",
    "husky": "^5.0.9",
    "lerna": "^4.0.0",
    "mocha": "^8.3.0",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "prettier-standard": "^13.0.6",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@fonoster/logger": "^0.3.3",
    "@grpc/grpc-js": "^1.5.5",
    "@grpc/proto-loader": "^0.6.9",
    "ajv": "^6.12.6",
    "buffer": "^6.0.3",
    "express": "^4.17.2",
    "funfix": "^7.0.1",
    "jvm-npm": "^0.1.1",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.7.0"
  }
}
