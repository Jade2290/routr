{
  "name": "root",
  "private": true,
  "nodemonConfig": {
    "watch": [
      "./mods/"
    ],
    "ext": "ts",
    "exec": "ts-node",
    "ignore": "**/*.d.ts"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=dev LOGS_LEVEL=verbose nodemon ./.scripts/runner",
    "start:connect": "cross-env PATH_TO_AUTH=$(pwd)/config/auth.json NODE_ENV=dev LOGS_LEVEL=verbose nodemon mods/connect/src/runner",
    "start:simpleauth": "cross-env PATH_TO_AUTH=$(pwd)/config/auth.json NODE_ENV=dev LOGS_LEVEL=verbose nodemon mods/simpleauth/src/runner",
    "start:echo": "cross-env NODE_ENV=dev LOGS_LEVEL=verbose nodemon mods/echo/src/runner",
    "start:dispatcher": "cross-env NODE_ENV=dev LOGS_LEVEL=verbose CONFIG_PATH=$(pwd)/config/dispatcher.json nodemon mods/dispatcher/src/runner",
    "start:location": "cross-env NODE_ENV=dev LOGS_LEVEL=verbose CONFIG_PATH=$(pwd)/config/location.json nodemon mods/location/src/runner",
    "start:edgeport": "cross-env NODE_ENV=dev LOGS_LEVEL=verbose ./mods/edgeport/edgeport.sh",
    "start:requester": "cross-env NODE_ENV=dev LOGS_LEVEL=verbose ./mods/requester/requester.sh",
    "transpile": "tsc",
    "make": "npm install && npm run bootstrap && npm run build && npm run setup",
    "bootstrap": "lerna bootstrap --no-ci --hoist",
    "setup": "./.scripts/setup.sh",
    "test": "cross-env NODE_ENV=dev nyc mocha mods/*/test/*.unit.test.ts --exit",
    "test:integration": "cross-env NODE_ENV=dev nyc mocha mods/*/test/*.int.test.ts --exit",
    "test:graaljs": "cross-env NODE_ENV=dev nyc .scripts/mocha_wrapper.sh mods/**/graaljstest/*.unit.test.ts --exit",
    "build": "lerna run build && npm run bundle",
    "clean": "gradle clean && rimraf **/*/tsconfig.tsbuildinfo && rimraf **/*/dist && rimraf **/*/dist && rimraf **/*/node_modules && rimraf dist node_modules build libs .gradle ",
    "bundle": "webpack --config webpack.config.js --mode none",
    "prebundle": "cross-env npm run setup && npm run transpile && ./.scripts/prebundle.sh",
    "bump:version": "rimraf mods/**/.lerna-changed-buster-* && lerna exec -- touch .lerna-changed-buster-$RANDOM",
    "lint": "eslint mods --ext .ts --fix",
    "format": "prettier --write mods/**/src",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^8.2.3",
    "@types/node": "^17.0.7",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.4",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.23.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-prettier": "^3.3.1",
    "esm": "^3.2.25",
    "husky": "^5.2.0",
    "jvm-npm": "^0.1.1",
    "lerna": "^4.0.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.1.5",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "@fonoster/logger": "^0.3.3",
    "buffer": "^6.0.3",
    "funfix": "^7.0.1"
  },
  "nyc": {
    "exclude": [
      "**/*.js"
    ]
  }
}
